{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "ESNext",
		"target": "ESNext",
		"sourceMap": true,
		"moduleResolution": "node",
		"rootDir": "./src",
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/**/*.test.ts"
	],
	"ts-node": {
		"esm": true
	}
}